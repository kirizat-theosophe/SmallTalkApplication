<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chat_left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:padding="@dimen/space_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/regular_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hei på deg. Dette er en test." />

    <TextView
        android:id="@+id/chat_left_author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_left_text_view"
        android:layout_marginBottom="@dimen/space_small"
        android:gravity="start"
        android:paddingStart="@dimen/space_small"
        android:paddingEnd="@dimen/space_small"
        android:textSize="@dimen/small_text"
        app:layout_constraintTop_toBottomOf="@id/chat_left_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Student" />

    <TextView
        android:id="@+id/chat_right_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:background="@drawable/rounded_bg_2"
        android:padding="@dimen/space_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/regular_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hei på deg. Dette er en test." />

    <TextView
        android:id="@+id/chat_right_author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_small"
        android:paddingStart="@dimen/space_small"
        android:paddingEnd="@dimen/space_small"
        android:textSize="@dimen/small_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_right_text_view"
        tools:text="Kiriza" />

</androidx.constraintlayout.widget.ConstraintLayout>