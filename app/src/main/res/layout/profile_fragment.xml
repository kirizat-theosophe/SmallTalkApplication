<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/circle_image_text_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/space_medium"
        android:textColor="@color/white"
        android:textSize="100sp"
        android:gravity="center"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="K" />

    <TextView
        android:id="@+id/user_name_label_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_medium"
        android:text="UserName"
        app:layout_constraintTop_toBottomOf="@id/circle_image_text_view"/>
    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_medium"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/user_name_label_text_view"/>
    <TextView
        android:id="@+id/first_name_label_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:layout_margin="@dimen/space_medium"
        app:layout_constraintTop_toBottomOf="@id/user_name_text_view"/>
    <TextView
        android:id="@+id/first_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_medium"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/first_name_label_text_view"/>

    <Button
        android:id="@+id/notification_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_medium"
        android:layout_marginEnd="@dimen/space_medium"
        android:layout_marginBottom="@dimen/space_medium"
        android:text="Send notification"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/log_out_button" />

    <Button
        android:id="@+id/log_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_medium"
        android:backgroundTint="@color/orange"
        android:text="Log out"
        android:textAllCaps="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/space_medium" />

</androidx.constraintlayout.widget.ConstraintLayout>